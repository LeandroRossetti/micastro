---
const { title } = Astro.props;
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="font-sans text-gray-800">
    <!-- Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
      <nav class="container mx-auto flex justify-between items-center p-4">
        <h1 class="text-2xl font-bold">MicaTrainer</h1>
        <ul class="flex gap-6 text-lg">
          <li>
            <a href={`${import.meta.env.BASE_URL}`} class="hover:underline">Inicio</a>
          </li>
          <li>
            <a href={`${import.meta.env.BASE_URL}#quien-soy`} class="hover:underline">¿Quién soy?</a>
          </li>
          <li>
            <a href={`${import.meta.env.BASE_URL}#planes`} class="hover:underline">Planes</a>
          </li>
          <li>
            <a href={`${import.meta.env.BASE_URL}#contacto`} class="hover:underline">Contacto</a>
          </li>
        </ul>
      </nav>
    </header>

    <!-- Contenido principal -->
    <slot />

    <!-- Footer -->
    <Footer />
  </body>
</html>
