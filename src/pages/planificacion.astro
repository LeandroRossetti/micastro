---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css"; // Asegurate que este archivo existe si querés estilos globales adicionales
---

<BaseLayout title="Potencia">
  <!-- Fondo rosa claro -->
  <div class="w-full bg-[#f3aab1]">
    <section class="flex flex-col md:flex-row min-h-screen">

      <!-- Imagen a la izquierda -->
      <div class="w-full md:w-1/2 sticky top-0 h-[60vh] md:h-screen z-0">
        <img
          src={`${import.meta.env.BASE_URL}planificacion.jpeg`}

          alt="Entrenamiento personalizado"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Texto a la derecha -->
      <div class="w-full md:w-1/2 px-6 py-16 flex flex-col justify-center space-y-6">
        <h2 class="text-5xl md:text-6xl font-bold text-white">
          Planificacion personalizada 

        </h2>

        <p class="text-lg text-white">
          Plan personalizado para gim o casa.

        </p>

  <!-- Qué incluye -->
<div class="mt-10">
  <h3 class="text-3xl text-white font-semibold mb-6">¿Qué incluye?</h3>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <!-- Card 1 -->
    <div class="bg-white rounded-xl shadow p-6 flex items-start gap-4">
      <svg class="w-8 h-8 text-[#f3aab1]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M9 17v-2a4 4 0 014-4h6"></path>
        <path d="M9 7h.01"></path>
        <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
      </svg>
      <p class="text-gray-700">Videollamada para conocerte, saber sobre vos y armar el plan acorde
</p>
    </div>

    <!-- Card 2 -->
    <div class="bg-white rounded-xl shadow p-6 flex items-start gap-4">
      <svg class="w-8 h-8 text-[#f3aab1]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"></path>
        <polyline points="17 8 12 3 7 8"></polyline>
        <line x1="12" y1="3" x2="12" y2="15"></line>
      </svg>
      <p class="text-gray-700">Seguimiento via Whatsapp</p>
    </div>

    <!-- Card 3 -->
    <div class="bg-white rounded-xl shadow p-6 flex items-start gap-4">
      <svg class="w-8 h-8 text-[#f3aab1]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M12 6v6l4 2"></path>
      </svg>
      <p class="text-gray-700">Video de cada ejercicio</p>
    </div>


  </div>
</div>


