  ---
  import BaseLayout from "../layouts/BaseLayout.astro";
  import "../styles/global.css"; // Asegurate que este archivo existe si querés estilos globales adicionales
  ---

  <BaseLayout title="Inicio">
    <main class="space-y-20">
      <!-- FFDDDE -->
      <section class="relative w-full h-[80vh] bg-[#F3AAB1]">
        <!-- Imagen centrada -->
        <img
          src={`${import.meta.env.BASE_URL}landing.jpeg`}
          alt="Entrenamiento"
          class="absolute inset-0 w-full h-full object-contain"
        />

        <!-- Capa para contraste -->
  <!--       <div class="absolute inset-0 bg-white/50 md:bg-white/25"></div> -->

        <!-- Contenedor de los textos -->
        <div class="relative z-10 flex justify-between items-center h-full px-8">
          <!-- Texto izquierdo -->
          <div class="w-1/3 text-left">
            <h1 class="text-xl md:text-6xl font-bold text-white">
              Hay un programa de entrenamiento que es para vos!
            </h1>
          </div>

          <!-- Espacio de la imagen (centro) -->
          <div class="w-1/3"></div>

          <!-- Texto derecho -->
          <div class="w-1/3 text-left">
            <p class="text-xl md:text-4xl font-bold text-white">
              Sos tu proyecto más grande, ¿estás lista para que lo logremos?
            </p>
          </div>
        </div>
      </section>

      <!-- Planes -->
      <section id="planes" class="container mx-auto py-10">
        <h2 class="text-3xl font-bold text-center mb-8">
          Planes de entrenamiento
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="bg-cover bg-center h-[80vh] flex flex-col justify-between p-0 text-white"
            style={`background-image: url('${import.meta.env.BASE_URL}9.jpeg');`}
          >
            <h3
              class="text-xl font-bold text-white bg-[#f3aab1] px-6 py-2 rounded w-fit"
              style="
                box-shadow:
                  1px 1px 0px hsl(0, 4%, 22%),
                  3px 3px 0px hsl(0, 4%, 22%),
                  4px 4px 0px hsl(0, 4%, 22%),
                  5px 5px 0px hsl(0, 4%, 22%),
                  2px 2px 0px hsl(0, 4%, 22%);
              "
            >
              Potencia tu bienestar
            </h3>

            <a
              href={`${import.meta.env.BASE_URL}potencia`}
              class="bg-[#f3aab1] hover:bg-[#ffddde] px-4 py-2 rounded mt-4 inline-block text-center animate-pulse-scale"
            >
              Ver más
            </a>
          </div>
          <div
            class="bg-cover bg-center h-[80vh] flex flex-col justify-between p-0 text-white"
            style={`background-image: url('${import.meta.env.BASE_URL}14.jpeg');`}
          >
            <h3
              class="text-xl font-bold text-white bg-[#f3aab1] px-6 py-2 rounded w-fit"
              style="
                box-shadow:
                  1px 1px 0px hsl(0, 4%, 22%),
                  3px 3px 0px hsl(0, 4%, 22%),
                  4px 4px 0px hsl(0, 4%, 22%),
                  5px 5px 0px hsl(0, 4%, 22%),
                  2px 2px 0px hsl(0, 4%, 22%);
              "
            >
              Clases en vivo
            </h3>
            <a
            href={`${import.meta.env.BASE_URL}clases`}
              class="bg-[#f3aab1] hover:bg-[#ffddde] px-4 py-2 rounded mt-4 inline-block text-center animate-pulse-scale"
            >
              Ver más
            </a>
          </div>
          <div
            class="bg-cover bg-center h-[80vh] flex flex-col justify-between p-0 text-white"
            style={`background-image: url('${import.meta.env.BASE_URL}planificacion.jpeg');`}
          >
            <h3
              class="text-xl font-bold text-white bg-[#f3aab1] px-6 py-2 rounded w-fit"
              style="
                box-shadow:
                  1px 1px 0px hsl(0, 4%, 22%),
                  3px 3px 0px hsl(0, 4%, 22%),
                  4px 4px 0px hsl(0, 4%, 22%),
                  5px 5px 0px hsl(0, 4%, 22%),
                  2px 2px 0px hsl(0, 4%, 22%);
              "
            >
              Planificación personalizada
            </h3>
            <a
              href={`${import.meta.env.BASE_URL}planificacion`}
              class="bg-[#f3aab1] hover:bg-[#ffddde] px-4 py-2 rounded mt-4 inline-block text-center animate-pulse-scale"
            >
              Ver más
            </a>
          </div>
        </div>
      </section>

<!-- Sobre mí con video de fondo -->
<section id="sobre-mi" class="relative h-[500px] md:h-[700px] overflow-hidden">

  <!-- Video de fondo -->
  <video
  
  autoplay
  muted
  loop
  playsinline
  class="absolute inset-0 w-full h-full object-contain object-center"
  >
    <source src={`${import.meta.env.BASE_URL}121.mp4`} type="video/mp4" />
  </video>

  <!-- Capa de superposición -->
  <div class="absolute inset-0 bg-black/30 flex flex-col items-center justify-center text-white text-center px-4">
    <h2 class="text-3xl md:text-5xl font-bold mb-4 drop-shadow-lg">Sobre mí</h2>
    <a
      href={`${import.meta.env.BASE_URL}sobremi`}
      class="bg-[#f3aab1] hover:bg-[#ffddde] text-black font-semibold px-6 py-3 rounded shadow-md animate-pulse transition-all"
    >
      Ver más
    </a>
  </div>
</section>


      <!-- Testimonios -->
      <section class="container mx-auto py-16">
        <h2 class="text-3xl font-bold text-center mb-8">Testimonios</h2>
        <div class="grid gap-8 md:grid-cols-3">
          <div class="p-6 bg-gray-100 rounded shadow">Testimonio 1</div>
          <div class="p-6 bg-gray-100 rounded shadow">Testimonio 2</div>
          <div class="p-6 bg-gray-100 rounded shadow">Testimonio 3</div>
        </div>
      </section>

      <!-- Sección de Contacto -->
<section id="contacto" class="bg-[#f3aab1] py-16 px-4 text-center">
  <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">¡Hablemos!</h2>
  <p class="text-white text-lg mb-10">
    Si tenés dudas o querés sumarte, escribime por WhatsApp o por mail.
  </p>

  <div class="flex flex-col md:flex-row justify-center items-center gap-6">
    <!-- Botón de WhatsApp -->
    <a
      href="https://wa.me/5491136883705?text=Hola!%20Quisiera%20más%20info%20sobre%20los%20planes%20de%20entrenamiento"
      target="_blank"
      class="bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded shadow-md transition transform hover:scale-105 flex items-center gap-2"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.5 3.5c-2.1-2.1-4.9-3.3-7.9-3.3s-5.8 1.2-7.9 3.3C2.6 5.6 1.3 8.4 1.3 11.4c0 2.1.6 4.1 1.7 5.8L1 23l5.9-1.9c1.6 1 3.5 1.5 5.5 1.5 3 0 5.8-1.2 7.9-3.3 2.1-2.1 3.3-4.9 3.3-7.9s-1.2-5.8-3.3-7.9zM12 21c-1.7 0-3.3-.5-4.7-1.4l-.3-.2-3.5 1.1 1.1-3.4-.2-.3c-.9-1.4-1.4-3-1.4-4.7 0-4.8 3.9-8.7 8.7-8.7 2.3 0 4.5.9 6.1 2.5 1.6 1.6 2.5 3.8 2.5 6.1 0 4.8-3.9 8.7-8.7 8.7zm4.4-6.1c-.2-.1-1.4-.7-1.6-.8s-.4-.1-.6.1c-.2.2-.7.8-.8 1-.1.1-.3.2-.5.1-1.4-.7-2.3-1.3-3.2-2.5-.2-.3 0-.4.1-.6.1-.2.2-.3.3-.5.1-.1.1-.2.2-.4.1-.1 0-.3 0-.4s-.6-1.5-.8-2c-.2-.5-.4-.4-.6-.4h-.5c-.1 0-.4.1-.5.2s-.7.7-.7 1.7.7 2 1 2.4c.2.3 1.4 2.1 3.4 2.9 2 .9 2 .6 2.4.5.4-.1 1.3-.6 1.5-1 .2-.4.2-.9.1-1z"/>
      </svg>
      WhatsApp
    </a>

    <!-- Botón de Email -->
    <a
      href="mailto:micatrainer@email.com"
      class="bg-white hover:bg-gray-100 text-[#f3aab1] font-semibold px-6 py-3 rounded shadow-md transition transform hover:scale-105 flex items-center gap-2"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M2 4a2 2 0 012-2h16a2 2 0 012 2v1.5L12 13 2 5.5V4zm0 3.236V20a2 2 0 002 2h16a2 2 0 002-2V7.236L12 15 2 7.236z"/>
      </svg>
      micatrainer@email.com
    </a>
  </div>
</section>


    </main>

    <script>
      const carousel = document.getElementById("carousel");
      let index = 0;

      if (carousel) {
        setInterval(() => {
          index = (index + 1) % 4;
          carousel.style.transform = `translateX(-${index * 100}%)`;
        }, 3000);
      }
    </script>
  </BaseLayout>
