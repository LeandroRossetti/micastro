---
// src/components/VideoSobreMi.astro
const videoSrc = `${import.meta.env.BASE_URL}121.mp4`;
---
<section id="sobre-mi" class="relative h-[500px] md:h-[700px] overflow-hidden">
  <!-- Contenedor del video con posici칩n relativa -->
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="relative">
      <!-- Video -->
      <video
        id="videoSobreMi"
        autoplay
        muted
        loop
        playsinline
        class="max-h-[700px] max-w-full object-contain"
      >
        <source src={videoSrc} type="video/mp4" />
      </video>

      <!-- Bot칩n sobre el video -->
      <button
        id="toggleMute"
        class="absolute bottom-2 right-2 z-20 bg-black/50 p-2 rounded-full text-white"
        aria-label="Toggle sound"
      >
        游댆
      </button>
    </div>
  </div>

  <!-- Capa de superposici칩n -->
  <div class="absolute inset-0 bg-black/30 flex flex-col items-center justify-center text-white text-center px-4 z-10">
    <h2 class="riwaya text-3xl md:text-5xl font-bold mb-4 drop-shadow-lg">Sobre m칤</h2>
    <a
      href={`${import.meta.env.BASE_URL}sobre-mi`}
      class="bg-[#f3aab1] hover:bg-[#ffddde] text-black font-semibold px-6 py-3 rounded shadow-md animate-pulse transition-all"
    >
      Ver m치s
    </a>
  </div>

  <!-- Script -->
  <script is:client>
    const btn = document.getElementById("toggleMute");
    const video = document.getElementById("videoSobreMi");

    btn.addEventListener("click", () => {
      if (!video) return;
      video.muted = !video.muted;
      btn.textContent = video.muted ? "游댆" : "游댉";
    });
  </script>
</section>

